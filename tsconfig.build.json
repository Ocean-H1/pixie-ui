{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "noEmit": false,
    "declaration": true,
    "declarationMap": true,
    "module": "ESNext",
    "moduleResolution": "node",
    "outDir": "dist",
    "removeComments": false,
    "sourceMap": true,
    "target": "ES2020"
  },
  "exclude": [
    "node_modules",
    "dist",
    "**/*.test.ts",
    "**/*.test.tsx",
    "**/*.spec.ts",
    "**/*.spec.tsx"
  ]
} 